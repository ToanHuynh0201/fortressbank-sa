}


POST /accounts
Description: Tạo tài khoản mới
POST /accounts
Content-Type: application/json
{
  "user_id": 124,
  "account_type": "savings", 
  "currency": "VND",
  "initial_balance": 100000
}
Response:
{
  "success": true,
  "message": "Account created successfully",
  "data": {
    "account_id": 1002,
    "user_id": 124,
    "account_number": "1234567891",
    "account_type": "savings",
    "balance": 100000.00,
    "currency": "VND",
    "status": "active",
    "created_at": "2025-09-28T10:30:00Z"
  }
}


PATCH /accounts/:id
Description: Cập nhật trạng thái tài khoản
PATCH /accounts/1001
Content-Type: application/json
{
  "status": "suspended"
}
Response:
{
  "success": true,
  "message": "Account updated successfully",
  "data": {
    "account_id": 1001,
    "status": "suspended",
    "updated_at": "2025-09-28T10:30:00Z"
  }
}

GET /accounts/:id/balance
Description: Lấy số dư tài khoản
GET /accounts/1001/balance
Response:
{
  "success": true,
  "message": "Balance retrieved successfully",
  "data": {
    "account_id": 1001,
    "balance": 1500000.00,
    "currency": "VND",
    "available_balance": 1500000.00,
    "as_of": "2025-09-28T10:30:00Z"
  }
}


